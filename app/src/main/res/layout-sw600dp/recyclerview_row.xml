<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="369dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/mealIDTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                android:textColor="@color/black"
                android:textSize="70sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/meal_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/meal_name1"
                android:textColor="@color/black"
                android:textSize="40sp"
                app:layout_constraintStart_toEndOf="@+id/mealIDTxt"
                app:layout_constraintTop_toTopOf="@+id/mealIDTxt" />

            <TextView
                android:id="@+id/meal_ingredients_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:text="@string/ingredientsss"
                android:textColor="#000000"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/mealIDTxt"
                app:layout_constraintStart_toEndOf="@+id/meal_name_txt"
                app:layout_constraintTop_toTopOf="@+id/mealIDTxt"
                app:layout_constraintVertical_bias="0.307" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>